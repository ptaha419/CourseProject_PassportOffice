@model PassportOffice.ViewModels.RegisterModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Регистрация";
}

<div class="container text-center mt-5">
    <h2>Регистрация нового пользователя</h2>

    <form asp-action="Register" asp-controller="User" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <label asp-for="Surname">Фамилия:</label><br />
                <input type="text" asp-for="Surname" />
                <span asp-validation-for="Surname" />
            </div>
            <div>
                <label asp-for="MiddleName">Отчество:</label><br />
                <input type="text" asp-for="MiddleName" />
                <span asp-validation-for="MiddleName" />
            </div>
            <div>
                <label asp-for="Name">Имя:</label><br />
                <input type="text" asp-for="Name" />
                <span asp-validation-for="Name" />
            </div>
            <div>
                <label asp-for="BirthDate">Дата рождения:</label><br />
                <input type="date" asp-for="BirthDate" />
                <span asp-validation-for="BirthDate" />
            </div>
            <div>
                <label asp-for="Gender">Пол:</label><br />
                <input type="text" asp-for="Gender" />
                <span asp-validation-for="Gender" />
            </div>
            <div>
                <label asp-for="PhoneNumber">Номер телефона:</label><br />
                <input type="tel" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" />
            </div>
            <div>
                <label asp-for="Email">Email:</label><br />
                <input type="email" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>
            <div>
                <label asp-for="Password">Пароль:</label><br />
                <input type="password" asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div>
                <label asp-for="RoleId">Роль:</label><br /> 
                <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control select-width"
                        style="margin-left: auto; margin-right: auto; display: block; width: fit-content;">
                    <option value="" disabled selected>Выберите роль...</option>
                </select>
                <span asp-validation-for="RoleId" />
            </div>

            <!-- Добавляем div-классы для динамического отображения полей -->
            <div class="position-div" style="display:none;">
                <!-- Скрываем изначально -->
                <label asp-for="Position">Должность:</label><br />
                <input type="text" asp-for="Position" />
                <span asp-validation-for="Position" />
            </div>

            <div class="department-div" style="display:none;">
                <!-- Скрываем изначально -->
                <label asp-for="DepartmentId">Отдел:</label><br />
                <input type="number" asp-for="DepartmentId" />
                <span asp-validation-for="DepartmentId" />
            </div>

            <div class="form-group">
                <input type="submit" value="Зарегистрироваться" class="btn btn-danger" />
            </div>
        </div>
    </form>

    <!-- Кнопка на случай, если пользователь уже зарегистрирован -->
    <br /><br />
    <a href="@Url.Action("Login", "User")" class="btn btn-link">Уже есть аккаунт? Войдите!</a>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Получаем ссылку на элемент select (roleId)
        const roleSelect = document.querySelector('select[name="RoleId"]'); 

        // Элементы блока для должности и отдела
        const positionDiv = document.querySelector('.position-div');
        const departmentDiv = document.querySelector('.department-div');

        // Функция изменения видимости блоков
        function toggleFields() {
            let selectedValue = parseInt(roleSelect.value); 
            let isManager = selectedValue === 2;           // Проверяем, равна ли роль значению 2

            if (isManager) {                               
                positionDiv.style.display = 'block';       
                departmentDiv.style.display = 'block';     
            } else {
                positionDiv.style.display = 'none';        
                departmentDiv.style.display = 'none';
            }
        }

        // Инициализация видимости при первой загрузке страницы
        toggleFields();                                    

        roleSelect.addEventListener('change', toggleFields); // Отслеживаем смену выбранного пункта
    });
</script>