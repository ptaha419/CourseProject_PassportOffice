@model PassportOffice.ViewModels.ProfileModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Ваш профиль";
}

<div class="container text-center mt-5">
    <h2>Редактирование профиля</h2>

    @if(TempData["SuccessMessage"] != null)
    {
        <p style="color: green;">@TempData["SuccessMessage"]</p>
    }

    <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Surname">Фамилия:</label>
                <input type="text" id="Surname" name="Surname" value="@Model.Surname" required/>
            </div>
            <div class="col-md-6">
                <label for="MiddleName">Отчество:</label>
                <input type="text" id="MiddleName" name="MiddleName" value="@Model.MiddleName"/>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Name">Имя:</label>
                <input type="text" id="Name" name="Name" value="@Model.Name" required/>
            </div>
            <div class="col-md-6">
                <label for="BirthDate">Дата рождения:</label>
                <input type="date" id="BirthDate" name="BirthDate" value="@Model.BirthDate.ToString("yyyy-MM-dd")" required/>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Gender">Пол:</label>
                <select id="Gender" name="Gender" required>
                    <option value="">Выберите пол...</option>
                    <option value="Мужской" selected="@(Model.Gender == "Мужской")">Мужской</option>
                    <option value="Женский" selected="@(Model.Gender == "Женский")">Женский</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="PhoneNumber">Телефон:</label>
                <input type="tel" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" required/>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Email">E-mail:</label>
                <input type="email" id="Email" name="Email" value="@Model.Email" required/>
            </div>
            <div class="col-md-6">
                <label for="TaxPayerNumber">ИНН:</label>
                <input type="text" id="TaxPayerNumber" name="TaxPayerNumber" value="@Model.TaxPayerNumber" required/>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="BirthPlace">Место рождения:</label>
                <input type="text" id="BirthPlace" name="BirthPlace" value="@Model.BirthPlace" required/>
            </div>
            <div class="col-md-6">
                <label for="RegistrationAddress">Адрес регистрации:</label>
                <textarea id="RegistrationAddress" name="RegistrationAddress" rows="3" required>@Model.RegistrationAddress</textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Обновить профиль</button>
    </form>
</div>