@model PassportOffice.Models.User

@{
    Layout = "_Layout";
    ViewData["Title"] = "Регистрация";
}

<div class="container text-center mt-5">
    <h2>Регистрация нового пользователя</h2>

    <!-- Сообщение об ошибке -->
    @if (ViewBag.ErrorMessage != null)
    {
        <p style="color: red;">@ViewBag.ErrorMessage</p>
    }

    <!-- Форма регистрации -->
    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
        <div class="form-group row">
            <label asp-for="@Model.Name" class="col-sm-2 col-form-label">Имя:</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Name" class="form-control" required />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.MiddleName" class="col-sm-2 col-form-label">Отчество:</label>
            <div class="col-sm-10">
                <input asp-for="@Model.MiddleName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Surname" class="col-sm-2 col-form-label">Фамилия:</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Surname" class="form-control" required />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.BirthDate" class="col-sm-2 col-form-label">Дата рождения:</label>
            <div class="col-sm-10">
                <input asp-for="@Model.BirthDate" type="date" class="form-control" required />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Gender" class="col-sm-2 col-form-label">Пол:</label>
            <div class="col-sm-10">
                <select asp-for="@Model.Gender" class="form-control" required>
                    <option value="">Выберите пол...</option>
                    <option value="Мужской">Мужской</option>
                    <option value="Женский">Женский</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.PhoneNumber" class="col-sm-2 col-form-label">Телефон:</label>
            <div class="col-sm-10">
                <input asp-for="@Model.PhoneNumber" class="form-control" required />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Email" class="col-sm-2 col-form-label">E-mail:</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Email" class="form-control" required />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Login" class="col-sm-2 col-form-label">Логин:</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Login" class="form-control" required />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Password" class="col-sm-2 col-form-label">Пароль:</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Password" type="password" class="form-control" required />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.ConfirmPassword" class="col-sm-2 col-form-label">Подтверждение пароля:</label>
            <div class="col-sm-10">
                <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" required />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
    }

    <!-- Кнопка на случай, если пользователь уже зарегистрирован -->
    <br /><br />
    <a href="@Url.Action("Login", "User")" class="btn btn-link">Уже есть аккаунт?</a>
</div>