@model PassportOffice.ViewModels.ApplicationModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Подать заявление";
}

<div class="container text-center mt-5">
    <h2>Подать заявление</h2>

    <form asp-action="MakeApplication" asp-controller="Application" method="post" enctype="multipart/form-data">
        <div class="row justify-content-md-center">
            <div class="col-md-8 col-lg-6">
                <div class="form-group mb-3"> 
                    @Html.DropDownList("typeOfApplicationId", new SelectList((IEnumerable<TypeOfApplication>)ViewData["TypesOfApplication"], "Id", "Name"), "-- Выберите тип заявления --")
                </div>

                <div class="form-group mb-3">
                    <label for="StartDate" class="form-label fw-bold">Дата подачи заявления</label>
                    <input type="date" id="StartDate" name="StartDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" readonly />
                    <span asp-validation-for="StartDate" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Description" class="form-label fw-bold">Текст заявления</label>
                    <textarea rows="4" cols="50" id="Description" name="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="attachedDocuments">Прикрепить документы:</label>
                    <select id="attachedDocuments" name="attachedDocumentsIds" class="custom-select form-control" size="1" multiple>
                        @{
                            foreach (var doc in ViewBag.UserDocuments as List<Document>)
                            {
                                <option value="@doc.Id">@doc.TypeOfDocument.Name</option>
                            }
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-success w-100">Подать заявление</button>
            </div>
        </div>
    </form>
</div>